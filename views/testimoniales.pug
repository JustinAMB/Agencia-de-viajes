extends ./layouts/index

block contenido
    main(class="container mt-5")
        h1(class="text-center mt-5") #{pagina}

        blockquote(class="text-center mt-5") Lee sobre nuestros clientes y sus experiencias
            include ./layouts/block_testimoniales.pug
            

        div(class="row")
            div(class="col-md-12")
                h2(class="d-block w-100 text-center") Agrega un Testimonial
                
                if(errores)
                    each error in errores
                        div(class="alert col alert-danger text-center")=error.mensaje
                            
 
            
            div(class="row justify-content-center col")
                div(class="col-md-8")
                    form(action="/testimoniales", method="post")
                        div(class="form-group")
                            label(for="nombre") Nombre
                            input#nombre(type="text", name="nombre",placeholder="Tu Nombre",class="form-control",required,value=nombre)
                        div(class="form-group")
                            label(for="correo") Correo Electr√≥nico
                            input#correo(type="email", name="correo",placeholder="Tu Correo",class="form-control" ,required,value=correo)
                        div(class="form-group")
                            label(for="mensaje") Mensaje
                            textarea#mensaje( name="mensaje",placeholder="Tu Mensaje",rows=3,class="form-control",required)=mensaje
                        input(type="submit", class="btn btn-success btn-block")
                        
            